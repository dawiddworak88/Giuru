<div id="root" asp-prerender-module="BuyerProductPage" asp-prerender-data="@Model">
</div>

<script>
    window.data = @Html.Raw(Json.Serialize(@Model));
</script>

@section MetaTags {
    @if (!string.IsNullOrWhiteSpace(((ProductPageViewModel)Model)?.ProductDetail?.Title))
    {
        <title>@MetaTagsService.GenerateTitle($"{((ProductPageViewModel)Model)?.ProductDetail?.Title} ({((ProductPageViewModel)Model)?.ProductDetail?.Sku})", true)</title>
    }

    @if (!string.IsNullOrWhiteSpace(((ProductPageViewModel)Model)?.ProductDetail?.Description))
    {
        <meta name="description" content="@(((ProductPageViewModel)Model)?.ProductDetail?.Description)" />
    }
}

@section HeadStyles {
    <link rel="stylesheet" href="~/dist/css/productpage.css" type="text/css" asp-append-version="true" />
}

@section BodyScripts {
    <script src="~/dist/js/productpage.js" asp-append-version="true"></script>
}