<div id="root" asp-prerender-module="NewsItemDetails" asp-prerender-data="@Model">
</div>

<script>
    window.data = @Html.Raw(Json.Serialize(@Model));
</script>

@section MetaTags {
    <title>@MetaTagsService.GenerateTitle(this.Localizer.GetString("NewsItemDetails"))</title>
    @if (!string.IsNullOrWhiteSpace(this.Localizer.GetString("NewsItemDetails")))
    {
        <meta name="description" content="@this.Localizer.GetString("NewsItemDetails")" />
    }
}

@section HeadStyles {
    <link rel="stylesheet" href="~/dist/css/newsItemPage.css" type="text/css" asp-append-version="true" />
}

@section BodyScripts {
    <script src="~/dist/js/newsItemPage.js" asp-append-version="true"></script>
}