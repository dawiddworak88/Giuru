@using System.Globalization
@using Foundation.PageContent.Components.Headers.Definitions
@using Microsoft.Extensions.Options;
@using Buyer.Web.Shared.Configurations
@inject IOptions<AppSettings> Options
@inject Foundation.Extensions.Services.MediaServices.IMediaHelperService MediaService

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    @await Html.PartialAsync("_GoogleTagManagerHeadPartial")
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="@MediaService.GetFileUrl(this.Options.Value.MediaUrl, LogoConstants.FaviconMediaId, true)" />
    @RenderSection("MetaTags", required: false)
    @RenderSection("HeadStyles", required: false)
    @RenderSection("HeadScripts", required: false)
</head>
<body>
    @await Html.PartialAsync("_GoogleTagManagerBodyPartial")
    <main role="main">
        @RenderBody()
    </main>
    @RenderSection("BodyScripts", required: false)
    @await Html.PartialAsync("_CookieConsentPartial")
</body>
</html>
