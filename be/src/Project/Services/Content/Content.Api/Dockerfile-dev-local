FROM strapi/base

WORKDIR /content

COPY ./package.json ./

RUN npm install

COPY . .

ARG DATABASE_CLIENT
ARG DATABASE_NAME
ARG DATABASE_HOST
ARG DATABASE_PORT
ARG DATABASE_USERNAME
ARG DATABASE_PASSWORD
ARG DATABASE_SSL

ENV NODE_ENV development

EXPOSE 1337

RUN npm run build

CMD ["npm", "run", "develop"]